<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<GridPane
          fx:controller="sample.loginController"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER" hgap="10" vgap="10">

    <Text text="Welcome to Student Management" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" >

        <font>
            <Font name="Times New Roman bold" size="20"  />
        </font>

    </Text>

    <Label text="username: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="usernameLogin" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label fx:id="invalidUNL" text="Invalid username" visible="false" textFill="red" GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <Label text="Password: " GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <PasswordField fx:id="passwordLogin" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label fx:id="invalidPassL" text="Invalid password" visible="false" textFill="red" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <Button onAction="#loginButtonClicked" text="Login" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label fx:id="Msg"  textFill="red" GridPane.columnIndex="1" GridPane.rowIndex="6" />

</GridPane>

